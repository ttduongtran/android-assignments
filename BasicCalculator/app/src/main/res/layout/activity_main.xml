<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/btn_0"
        android:padding="5dp"
        android:gravity="center|end"
        android:textSize="50sp"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:background="@color/colorPrimaryDark"
    />

    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/btn_unknow"
        android:padding="5dp"
        android:gravity="center|end"
        android:textSize="50sp"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:background="@color/colorPrimaryDark"
        />

    <!-- row 1: scientific notation calculator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/btn_convert"
            android:background="@drawable/btn_gradient"
            android:onClick="handleClick_convert"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/orange_500" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/btn_log"
            android:onClick="handleClick_log"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:background="@drawable/btn_gradient"
            android:textColor="@color/orange_500" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/btn_power"
            android:background="@drawable/btn_gradient"
            android:onClick="handleClick_power"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/orange_500"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/btn_root"
            android:background="@drawable/btn_gradient"
            android:onClick="handleClick_root"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/orange_500"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/btn_factorial"
            android:background="@drawable/btn_gradient"
            android:onClick="handleClick_factorial"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/orange_500"
            />
    </LinearLayout>
