            android:text="@string/btn_6"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_subtract"
            android:onClick="handleClick_subtract"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_clear"
            android:onClick="handleClick_clear"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_1"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_2"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_2"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_3"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_3"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_multiply"
            android:onClick="handleClick_multiply"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_modulo"
            android:onClick="handleClick_modulo"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_0"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_0"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_dot"
            android:onClick="handleClick_dot"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:onClick="handleClick_divide"
            android:text="@string/btn_divide"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_equal"
            android:onClick="handleClick_equal"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />
    </LinearLayout>
