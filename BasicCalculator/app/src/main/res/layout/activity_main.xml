    <!-- row 3: numbers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_7"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_7"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_8"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_8"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_9"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_9"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_add"
            android:background="@drawable/btn_function"
            android:text="@string/btn_add"
            android:textColor="@color/orange_500"
            android:textSize="30sp" />
        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_delete"
            android:background="@drawable/btn_gradient"
            android:src="@drawable/ic_baseline_backspace_32"
            android:textColor="@color/colorTextonPrimary" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="handleClick_4"
